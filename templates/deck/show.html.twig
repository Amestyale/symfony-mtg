{% extends 'base.html.twig' %}

{% block title %}Deck{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_deck_index') }}">Decks</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ deck.name }}</li>
      </ol>
    </nav>

    <h1>Deck</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deck.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ deck.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_deck_edit', {'id': deck.id}) }}"><button class="btn btn-primary">Edit</button></a>

    {{ include('deck/_delete_form.html.twig') }}

    <h2>Deck's cards</h2>
    {{ include('card/index.html.twig') }}
    
{% endblock %}
