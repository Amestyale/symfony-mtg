{% extends 'base.html.twig' %}

{% block title %}Deck index{% endblock %}

{% block body %}
    <div class="o-group">
        <h1>Decks</h1>
        <a href="{{ path('app_deck_new')}}">
            <button class="btn btn-primary">New deck</button>
        </a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deck in decks %}
            <tr>
                <td>{{ deck.id }}</td>
                <td>
                    <a href="{{ path('app_deck_show', {'id': deck.id}) }}">{{ deck.name }}</a>
                </td>
                <td>
                    <a href="{{ path('app_deck_edit', {'id': deck.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
