<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="main-nav navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_edition_index') }}">Editions</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_deck_index') }}">Decks</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_card_new') }}">Add card</a>
                  </li>
                </ul>
            </div>
        </nav>
        <main class="container">
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
