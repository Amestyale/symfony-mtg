{% extends 'base.html.twig' %}

{% block title %}Card {{ card.name }}{% endblock %}

{% block body %}
    <h1>{{ card.name }}</h1>

    <div class="row">

        <div class="col-3">
            <img class="img-card-show" src="{{ card.image }}" />
        </div>
        <div class="col-9">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <td>{{ card.name }}</td>
                    </tr>
                    <tr>
                        <th>Edition</th>
                        <td>{{ card.edition.name }}</td>
                    </tr>
                    <tr>
                        <th>Rarity</th>
                        <td>{{ card.rarity }}</td>
                    </tr>
                    <tr>
                        <th>Cost</th>
                        <td>
                            {{ include('card/utilities/_colors.html.twig') }}
                        </td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td class="u-whitespace">{{ card.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('app_card_edit', {'id': card.id}) }}"><button class="btn btn-primary">Edit</button></a>

    {{ include('card/_delete_form.html.twig') }}
{% endblock %}
